<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @hotel.name %></h1>
    </div>
  
    <div class="col-md-5">
      <img src="<%= @hotel.picture_url%>" class="img-fluid" />
    </div>
    <div class="col-md-7">
      <h5 class="mb-3">所在地 : <%= @hotel.prefecture.name %></h2>
      <h4 class="mb-5"><%= @hotel.description %></h3>
    </div>
  </div>
  
  <div class="mt-4 mb-2">
    <h5> 最新のレビュー</h5>
  </div>
  
  <% @hotel.reviews.order(created_at: :desc).first(3).each do |review| %>
    <div class="card w-100 mb-2">
      <h6 class="card-header">rating : <%= review.rating %></h6>
      <div class="card-body">
        <h6 class="card-title"><%= review.title %></h6>
        <p class="card-subtitle mb-2"><%= review.name %></p>
        <p class="card-text"><%= review.body %></p>
      </div>
    </div>
  <% end %>
  
  <div class="d-flex justify-content-around">
    <p><%= link_to 'レビュー一覧', hotel_reviews_path(@hotel) %></p>
    <p><%= link_to 'レビューを投稿する', new_hotel_review_path(@hotel) %></p>
    <p><%= link_to 'Back', hotels_path %></p>
  </div>
</div>
